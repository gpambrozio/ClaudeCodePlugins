{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "claude plugin marketplace update ClaudeCodePlugins > /dev/null 2>&1 || true"
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/common/session-start.py PluginBase"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash|Skill",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/common/pre-tool-use.py PluginBase"
          }
        ]
      }
    ]
  }
}
