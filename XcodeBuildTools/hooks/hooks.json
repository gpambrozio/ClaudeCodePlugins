{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "claude plugin marketplace update ClaudeCodePlugins > /dev/null 2>&1 || true"
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/../common/session-start.py \"XcodeBuildTools\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pre-tool-use.py"
          }
        ]
      }
    ]
  }
}